# term
export TERM="xterm-256color"

# locale
export LC_ALL=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8

# editor
export EDITOR="vim"
export VIM_FILES="$HOME/.vim"

# dotfiles
export DOTFILES=${DOTFILES:-$HOME/workspace/dotfiles}

# misc
export FZF_DEFAULT_COMMAND='ag -g ""'

# Qt
# QT_AUTO_SCREEN_SCALE_FACTOR [boolean] enables automatic scaling, based on the
# monitor's pixel density. This won't change the size of point-sized fonts,
# since point is a physical measurement unit. Multiple screens may get different
# scale factors.
# https://doc.qt.io/qt-5/highdpi.html#high-dpi-support-in-qt
export QT_AUTO_SCREEN_SCALE_FACTOR=0
