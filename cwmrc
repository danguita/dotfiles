# cwm config file

# Automatically add new windows to the current group
sticky yes

# Default font
fontname "monospace:pixelsize=22"

# Appearance
borderwidth 1
color activeborder "#5294E2"
color inactiveborder "#565656"
color urgencyborder "#cc241d"

# Menu colors
color font "#eeeeee"
color selfont "#eeeeee"
color menubg "#161616"
color menufg "#5294E2"

# Gaps
gap 24 0 0 0

# How many pixels a window gets moved by
moveamount 5

# Ignore, and do not warp to, windows with these names
ignore polybar
ignore dunst

# Keybindings:
#
# 4 = mod (windows key)
# S = shift
# C = control
# M = meta (alt)

# Remove all default keybindings
unbind-key all

# Open terminal
bind-key 4S-Return terminal

# Cycle through windows
bind-key M-Tab window-cycle
bind-key MS-Tab window-rcycle

# Go to last group
bind-key 4-Tab group-last

# mod + $N = show only windows for group $N
bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5
bind-key 4-6 group-only-6
bind-key 4-7 group-only-7
bind-key 4-8 group-only-8
bind-key 4-9 group-only-9

# Toggle group n's visibility, without hiding active group
bind-key 4M-1 group-toggle-1
bind-key 4M-2 group-toggle-2
bind-key 4M-3 group-toggle-3
bind-key 4M-4 group-toggle-4
bind-key 4M-5 group-toggle-5
bind-key 4M-6 group-toggle-6
bind-key 4M-7 group-toggle-7
bind-key 4M-8 group-toggle-8
bind-key 4M-9 group-toggle-9

# mod + shift + $N = move window to group $N
bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5
bind-key 4S-6 window-movetogroup-6
bind-key 4S-7 window-movetogroup-7
bind-key 4S-8 window-movetogroup-8
bind-key 4S-9 window-movetogroup-9

# Window size
bind-key 4-f window-fullscreen
bind-key 4-m window-maximize

# Window stick (stick current window to all groups)
bind-key 4S-s window-stick

# Window management
bind-key 4-w window-delete

# Snap windows
bind-key 4S-h window-snap-left
bind-key 4S-j window-snap-down
bind-key 4S-k window-snap-up
bind-key 4S-l window-snap-right

# Move windows
bind-key 4M-h window-move-left
bind-key 4M-j window-move-down
bind-key 4M-k window-move-up
bind-key 4M-l window-move-right

# Resize windows
bind-key 4S-h window-resize-left
bind-key 4S-j window-resize-down
bind-key 4S-k window-resize-up
bind-key 4S-l window-resize-right

# Window tiling
bind-key 4-v window-vtile
bind-key 4S-v window-htile

# Menus
bind-key 4-slash menu-window
bind-key 4-g menu-group
bind-key 4-d menu-cmd
bind-key 4-question menu-exec
bind-key 4-period menu-ssh

# Restart and quit
bind-key 4S-r restart
bind-key 4S-q quit

# Mouse bindings
bind-mouse 4-1 window-move
bind-mouse 4-3 window-resize
bind-mouse 4-2 window-lower
bind-mouse 4S-2 window-hide

# Move pointer
bind-key MS-h pointer-move-left-big
bind-key MS-j pointer-move-down-big
bind-key MS-k pointer-move-up-big
bind-key MS-l pointer-move-right-big

# Commands
bind-key 4-Escape slock
bind-key 4S-p "rofi -show combi -modes combi -combi-modes \"window,drun,run\""
bind-key 4S-b xdg-open 'https://'
bind-key 4S-n pcmanfm
bind-key 4-e emoji-selector

# Screen brightness controls.
bind-key XF86MonBrightnessUp "xbacklight -ctrl intel_backlight -inc 10"
bind-key XF86MonBrightnessDown "xbacklight -ctrl intel_backlight -dec 10"

# Audio controls.
bind-key XF86AudioRaiseVolume "pactl set-sink-volume @DEFAULT_SINK@ +5%"
bind-key XF86AudioLowerVolume "pactl set-sink-volume @DEFAULT_SINK@ -5%"
bind-key XF86AudioMute "pactl set-sink-mute @DEFAULT_SINK@ toggle"
bind-key XF86AudioMicMute "pactl set-source-mute @DEFAULT_SOURCE@ toggle"

# Take screenshots.
bind-key Print "take-screenshot --mode=full"
bind-key S-Print "take-screenshot --mode=full-clipboard"
bind-key 4-Print "take-screenshot --mode=selection"
bind-key 4S-Print "take-screenshot --mode=selection-clipboard"
