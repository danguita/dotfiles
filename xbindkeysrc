# Audio controls.
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
  XF86AudioRaiseVolume
"pactl set-sink-volume @DEFAULT_SINK@ -5%"
  XF86AudioLowerVolume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
  XF86AudioMute
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
  XF86AudioMicMute

# Screen brightness controls.
"xbacklight -inc 20"
  XF86MonBrightnessUp
"xbacklight -dec 20"
  XF86MonBrightnessDown

# Media controls.
"playerctl previous"
  Mod4+Shift + minus
"playerctl next"
  Mod4+Shift + equal
"playerctl play-pause"
  Mod4+Shift + BackSpace

# Take screenshots.
"take-screenshot --mode=full"
   Print
"take-screenshot --mode=full-clipboard"
   Shift+Print
"take-screenshot --mode=selection"
   Mod4+Print
"take-screenshot --mode=selection-clipboard"
   Mod4+Shift + Print

# Application launcher.
"j4-dmenu-desktop --dmenu='dmenu -i -fn monospace:size=10'"
   Mod4+Shift + p

# Clipboard manager.
"clipboard-menu --dmenu='dmenu -i -fn monospace:size=10'"
   Mod4 + c

# Open a browser.
"xdg-open 'http://'"
   Mod4+Shift + b

# Open a file manager.
"dbus-launch pcmanfm $HOME"
   Mod4+Shift + n

# Lock the screen.
"slock"
   Mod4+Escape
