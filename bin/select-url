#!/usr/bin/env bash
#
# Extracts unique URIs from the stdin and pipes them to be displayed in a
# dialog.
#
# It is intended to be executed from a terminal emulator.
#
# select-url

grep -Eo '\bhttps?://\S+\b' |
    uniq |
    dmenu -fn "monospace:size=10:antialias=false" -i -p "Open URL:" |
    xargs xdg-open
