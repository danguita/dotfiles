#!/usr/bin/env bash
#
# Changes screen layout using xrandr.
#
# change-screen-layout \
#   --mode={clone|dual|dual-vertical|external|external-dual|laptop} \
#   [--intern=eDP1] \
#   [--extern=HDMI1] \
#   [--extern-a=DP1] \
#   [--extern-b=HDMI1]

INTERN=eDP1
EXTERN=HDMI1

usage()
{
   printf "\nUsage: %s --mode=<mode> [--intern=<output>] [--extern=<output>] [--extern-a=<output>] [--extern-b=<output>]\n\n" "$0"
   printf "\tmode\t{clone|dual|dual-vertical|external|external-dual|laptop}\n"
   printf "\tintern\tdefaults to eDP1\n"
   printf "\textern\tdefaults to HDMI1\n"
}

for i in "$@"
do
  case $i in
    -m=*|--mode=*)
      MODE="${i#*=}"
      ;;
    --extern=*)
      EXTERN="${i#*=}"
      ;;
    --extern-a=*)
      EXTERN_A="${i#*=}"
      ;;
    --extern-b=*)
      EXTERN_B="${i#*=}"
      ;;
    --intern=*)
      INTERN="${i#*=}"
      ;;
    *)
      usage
      exit 1
      ;;
  esac
done

case $MODE in
  "clone")
    COMMAND=(xrandr --output "$INTERN" --auto --output "$EXTERN" --auto --same-as "$INTERN")
    ;;
  "dual")
    COMMAND=(xrandr --output "$INTERN" --auto --output "$EXTERN" --primary --auto --right-of "$INTERN")
    ;;
  "dual-vertical")
    COMMAND=(xrandr --output "$INTERN" --auto --output "$EXTERN" --primary --auto --above "$INTERN")
    ;;
  "external")
    COMMAND=(xrandr --output "$INTERN" --off --output "$EXTERN" --auto)
    ;;
  "external-dual")
    if [ -z "$EXTERN_A" ]; then
      echo "ERROR: --extern-a output is missing"
      usage
      exit 1
    fi

    if [ -z "$EXTERN_B" ]; then
      echo "ERROR: --extern-b output is missing"
      usage
      exit 1
    fi

    COMMAND=(
      xrandr \
        --output "$INTERN" --off \
        --output "$EXTERN_A" --primary --auto \
        --output "$EXTERN_B" --auto --right-of "$EXTERN_A"
    )
    ;;
  "laptop")
    COMMAND=(xrandr --output "$INTERN" --auto --output "$EXTERN" --off)
    ;;
  *)
    echo "ERROR: Unknown mode \"$MODE\""
    usage
    exit 1
esac

"${COMMAND[@]}"
