#!/usr/bin/env bash
#
# Changes screen layout using xrandr.
#
# change-screen-layout \
#   --mode={clone|dual|dual-vertical|external|external-dual|laptop|tv} \
#   [--intern=eDP-1] \
#   [--extern=HDMI1] \
#   [--extern-a=DP1] \
#   [--extern-b=HDMI1]

INTERN=eDP-1
EXTERN=HDMI-1

usage()
{
   printf "\nUsage: %s --mode=<mode> [--intern=<output>] [--extern=<output>] [--extern-a=<output>] [--extern-b=<output>]\n\n" "$0"
   printf "\tmode\t{clone|dual|dual-vertical|external|external-dual|laptop|tv}\n"
   printf "\tintern\tdefaults to %s\n" "$INTERN"
   printf "\textern\tdefaults to %s\n" "$EXTERN"
}

for i in "$@"
do
  case $i in
    -m=*|--mode=*)
      MODE="${i#*=}"
      ;;
    --extern=*)
      EXTERN="${i#*=}"
      ;;
    --extern-a=*)
      EXTERN_A="${i#*=}"
      ;;
    --extern-b=*)
      EXTERN_B="${i#*=}"
      ;;
    --intern=*)
      INTERN="${i#*=}"
      ;;
    *)
      usage
      exit 1
      ;;
  esac
done

case $MODE in
  "clone")
    COMMAND=(
      xrandr \
        --output "$INTERN" --auto \
        --output "$EXTERN" --auto --same-as "$INTERN" \
        --set audio off
      )
    ;;
  "dual")
    COMMAND=(
      xrandr \
        --output "$INTERN" --primary --auto \
        --output "$EXTERN" --auto --right-of "$INTERN" \
        --set audio off
      )
    ;;
  "dual-vertical")
    COMMAND=(
      xrandr \
        --output "$INTERN" --auto \
        --output "$EXTERN" --primary --auto --above "$INTERN" --mode 2560x1440 --rate 120 \
        --set audio off
    )
    ;;
  "external")
    COMMAND=(
      xrandr \
        --output "$INTERN" --off \
        --output "$EXTERN" --auto --mode 2560x1440 --rate 120 \
        --set audio off
      )
    ;;
  "external-dual")
    if [ -z "$EXTERN_A" ]; then
      echo "ERROR: --extern-a output is missing"
      usage
      exit 1
    fi

    if [ -z "$EXTERN_B" ]; then
      echo "ERROR: --extern-b output is missing"
      usage
      exit 1
    fi

    COMMAND=(
      xrandr \
        --output "$INTERN" --off \
        --output "$EXTERN_A" --primary --auto \
        --output "$EXTERN_B" --auto --right-of "$EXTERN_A"
    )
    ;;
  "laptop")
    COMMAND=(
      xrandr \
        --output "$INTERN" --auto \
        --output "$EXTERN" --off
      )
    ;;
  "tv")
    COMMAND=(
      xrandr \
        --output "$INTERN" --primary --auto \
        --output "$EXTERN" --auto --left-of "$INTERN" \
        --set audio on
      )
    ;;
  *)
    echo "ERROR: Unknown mode \"$MODE\""
    usage
    exit 1
esac

"${COMMAND[@]}"
